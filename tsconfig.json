{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "noEmit": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "types", "src/@types"],
    "baseUrl": "./"
  },
  "include": ["src", "types"],
  "exclude": ["build", "node_modules"]
}
